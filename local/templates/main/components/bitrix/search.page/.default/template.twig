<section class="search-result">
    <div class="search-result__row">
        <div class="search-result__filter">
            <div class="search-result__tabs tabs tabs--space-between">
                <div class="tabs__cont">
                    <a href="{{ result.URL_TAB }}" class="tabs__item {{ result.NOT_MAIN_TAB != 1 ? ' tabs__item_selected' }}">
                        <span class="tabs-item__text">Найдено - {{ result.COUNTS.ALL ?: 0 }}</span>
                    </a>
                    <a href="{{ result.URL_TAB ~ '&law_about_education[]=' ~ params.IBLOCKS.prav_base }}"
                       class="tabs__item{{ params.IBLOCKS.prav_base in _GET.law_about_education ? ' tabs__item_selected' }}">
                        {% if params.IBLOCKS.prav_base in _GET.law_about_education %}
                            <svg class="tabs__icon icon">
                                <use xlink:href="{{ params.ASSETS ~ '#iblock_law_about_education_selected' }}"></use>
                            </svg>
                        {% else %}
                            <svg class="tabs__icon icon">
                                <use xlink:href="{{ params.ASSETS ~ '#iblock_law_about_education' }}"></use>
                            </svg>
                        {% endif %}

                        <span class="tabs-item__text">
                            Нормативно-правовые акты - {{ result.COUNTS[params.IBLOCKS.prav_base] ?: 0 }}
                        </span>
                    </a>
                    <a href="{{ result.URL_TAB ~ '&practice[]=' ~ params.IBLOCKS['sudebnaya-praktika'] }}"
                       class="tabs__item{{ params.IBLOCKS['sudebnaya-praktika'] in _GET.practice ? ' tabs__item_selected' }}">
                        {% if params.IBLOCKS['sudebnaya-praktika'] in _GET.practice %}
                            <svg class="tabs__icon icon">
                                <use xlink:href="{{ params.ASSETS ~ '#iblock_practice_selected' }}"></use>
                            </svg>
                        {% else %}
                            <svg class="tabs__icon icon">
                                <use xlink:href="{{ params.ASSETS ~ '#iblock_practice' }}"></use>
                            </svg>
                        {% endif %}
                        <span class="tabs-item__text">Судебные акты - {{ result.COUNTS[params.IBLOCKS['sudebnaya-praktika']] ?: 0 }}</span>
                    </a>
                    <a href="{{ result.URL_TAB ~ '&content[]=' ~ params.IBLOCKS.content_faq }}"
                       class="tabs__item{{ params.IBLOCKS.content_faq in _GET.content ? ' tabs__item_selected' }}">
                        {% if params.IBLOCKS.content_faq in _GET.content %}
                            <svg class="tabs__icon icon">
                                <use xlink:href="{{ params.ASSETS ~ '#iblock_faq_selected' }}"></use>
                            </svg>
                        {% else %}
                            <svg class="tabs__icon icon">
                                <use xlink:href="{{ params.ASSETS ~ '#iblock_faq' }}"></use>
                            </svg>
                        {% endif %}
                        <span class="tabs-item__text">Вопросы и ответы - {{ result.COUNTS[params.IBLOCKS.content_faq] ?: 0 }}</span>
                    </a>
                </div>
                <div class="tabs__cont">
                    <a class="tabs__item" href="/extended-search/">Региональная база</a>
                </div>
            </div>
        </div>
    </div>
    <div class="search-result__col search-result__col--left">
        <div class="search-result__wrap">
            <div class="search-result__list">
                {% if result.ITEMS is not empty %}
                    {% for item in result.ITEMS %}
                        <a href="{{ item.URL }}"
                           class="search-result__item search-result__item--flex" {% if item.EDIT_ELEMENT_ATTR %} {{ item.EDIT_ELEMENT_ATTR }} {% endif %}>
                            <div class="search-result__item-num">
                                <span>{{ item.POS }}</span>
                            </div>
                            <div class="search-result__item-cont">
                                <div class="search-result__item-title">{{ item.TITLE }}</div>
                                <div class="search-result__item-description">{{ item.DESCRIPTION[:200] }}{{ (item.DESCRIPTION|length > 200) ? '...' }}</div>

                                {% if item.DATE_PUBLICATION or item.RUBRICS %}
                                    <div class="search-result__item-footer">
                                        <div class="search-result__item-time">
                                            <time class="article-short-preview__time">{{ item.DATE_PUBLICATION }}</time>
                                        </div>
                                        <div class="search-result__item-rubrics">
                                            {% for rb in  item.RUBRICS %}
                                                <div class="search-result__item-rubric article-short-preview__rubric{{ ' article-short-preview__rubric--' ~ rb.VALUE }}">
                                                    <svg class="article-short-preview__rubric-icon icon">
                                                        <use xlink:href="{{ params.ASSETS ~ '#clr_' ~ rb.VALUE }}"></use>
                                                    </svg>
                                                    <span class="article-short-preview__rubric-text">{{ rb.NAME | slice(0, 30) }}{{ (rb.NAME|length > 30) ? '...' }}</span>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </a>
                    {% endfor %}
                {% else %}
                    <div class="search-result__empty">
                        <svg class="search-result__empty-icon">
                            <use xlink:href="{{ params.ASSETS ~ '#search_empty' }}"></use>
                        </svg>
                        <div class="search-result__empty-title">Ничего не найдено</div>
                        <div class="search-result__empty-text">
                            Попробуйте изменить запрос или фильтрацию и попробуйте снова
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        {% if result.NAV_RESULT.nEndPage > 1 %}
            <div class="search-result__pagination">
                <div class="pagination">
                    <a href="{{ result.URL ~ '&' ~ result.NAV_RESULT.NavQueryString ~ 'PAGEN_' ~ result.NAV_RESULT.NavNum ~ '=' ~ (result.NAV_RESULT.NavPageNomer - 1) }}"
                       class="pagination__prev">
                        <svg class="pagination__icon icon">
                            <use xlink:href="{{ params.ASSETS }}#arrow_left"></use>
                        </svg>
                    </a>
                    {% for i in result.NAV_RESULT.nStartPage..result.NAV_RESULT.nEndPage %}
                        <a href="{{ result.URL ~ '&' ~ result.NAV_RESULT.NavQueryString ~ 'PAGEN_' ~ result.NAV_RESULT.NavNum ~ '=' ~ i }}"
                           class="pagination__item{{ result.NAV_RESULT.NavPageNomer == i ? ' pagination__item_is-current' }}">{{ i }}</a>
                    {% endfor %}
                    <a href="{{ result.URL ~ '&' ~ result.NAV_RESULT.NavQueryString ~ 'PAGEN_' ~ result.NAV_RESULT.NavNum ~ '=' ~ (result.NAV_RESULT.NavPageNomer + 1) }}"
                       class="pagination__next">
                        <svg class="pagination__icon icon">
                            <use xlink:href="{{ params.ASSETS }}#arrow_right"></use>
                        </svg>
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
    <div class="search-result__col search-result__col--right">
        <div class="search-result__wrap wrapper-rubrics-banners">
            {% if result.RUBRICS is not empty %}
                <form id="configform" action="{{ result.FORM_ACTION }}" class="search-form js-search-form-filter">
                    <input type="text" name="q" value="{{ result.REQUEST.QUERY }}" hidden/>

                    {% if _GET.law_about_education %}
                        {% for lawAboutEducationItem in _GET.law_about_education %}
                            <input type="text" name="law_about_education[]" value="{{ lawAboutEducationItem }}" hidden/>
                        {% endfor %}
                    {% endif %}

                    {% if _GET.content %}
                        {% for contentItem in _GET.content %}
                            <input type="text" name="content[]" value="{{ contentItem }}" hidden/>
                        {% endfor %}
                    {% endif %}

                    {# <input type="text" name="where" value="" hidden/> #}
                    <div class="search-form__title">Рубрики:</div>
                    <ul class="search-form-rubrics">
                        {% for rubric in result.RUBRICS %}
                            <li class="search-form-rubrics__item">
                                <input class="search-form-rubrics__checkbox checkbox" id="{{ rubric.ID }}"
                                       data-xml-id="{{ rubric.XML_ID }}" name="search_filter[{{ rubric.XML_ID }}]"
                                       type="checkbox" value="" {% if rubric.CHECKED %} checked {% endif %}>
                                <label for="{{ rubric.ID }}">
                                    <span>{{ rubric.NAME }}</span>
                                </label>
                            </li>
                        {% endfor %}
                    </ul>
                    <button class="search-form__btn-reset" type="reset" onclick="this.form.reset();">Сбросить</button>
                </form>
            {% endif %}
        </div>

        <div class="search-result__wrap right-side-banners">
            <div class="right-side-banners__item">
                <picture class="right-side-banners__picture">
                    <img src="/upload/images/regulations.png" class="right-side-banners__img" alt="">
                    <img src="/upload/images/documents.svg" class="right-side-banners__icon" alt="">
                </picture>
                <div class="right-side-banners__title">База нормативно-правовых актов</div>
                <a href="/extended-search/?LAST_FILTER=aFilterPrav" class="right-side-banners__link"></a>
            </div>
            <div class="right-side-banners__item">
                <picture class="right-side-banners__picture">
                    <img src="/upload/images/judicial-acts.png" class="right-side-banners__img" alt="">
                    <img src="/upload/images/legal-scale.svg" class="right-side-banners__icon" alt="">
                </picture>
                <div class="right-side-banners__title">База судебных актов</div>
                <a href="/extended-search/?LAST_FILTER=aFilterSud" class="right-side-banners__link"></a>
            </div>
            <div class="right-side-banners__item">
                <picture class="right-side-banners__picture">
                    <img src="/upload/images/questions-answers.png" class="right-side-banners__img" alt="">
                    <img src="/upload/images/question.svg" class="right-side-banners__icon" alt="">
                </picture>
                <div class="right-side-banners__title">База вопросов и ответов</div>
                <a href="/extended-search/?LAST_FILTER=aFilterFaq" class="right-side-banners__link"></a>
            </div>
        </div>

    </div>
</section>
